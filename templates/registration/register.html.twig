{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashSucces in app.flashes('success') %}
		<div class="alert alert-success" role="alert">
			{{flashSucces}}
		</div>
	{% endfor %}
	<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
		<symbol id="exclamation-triangle-fill" fill="currentColor" viewbox="0 0 16 16">
			<path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
		</symbol>
	</svg>
	<div class="container d-flex flex-column">
		<div class="row align-items-center justify-content-center g-0
																																																																																																																																																																																																																																																																																																																																																																																																																														        min-vh-100">
			<div
				class="col-12 col-md-8 col-lg-6 col-xxl-4 py-8 py-xl-0">
				<!-- Card -->
				<div
					class="card smooth-shadow-md">
					<!-- Card body -->
					<div class="card-body p-6">
						<div class="mb-4">
							<a href="#"><img src="{{asset('assets/img/logo.png')}}" style=' width:100%;' class="mb-2" alt=""></a>
							<p class="mb-6">Entrez les informations de l'utilisateur</p>
						</div>

						{{ form_start(registrationForm) }}
						<div class="mb-3">

							{{
                                form_label(registrationForm.name, null,
                                {
                                    'label': 'Nom',
                                    'label_attr': {'class': 'form-label'}
                                })
                            }}
							{{
                                form_widget(registrationForm.name,
                                {
                                    'attr': {'class': 'form-control'}
                                })
                            }}
						</div>
						<div
							class="mb-3">
							{# <label for="registration_form_name" class="form-label">User Name</label> #}
							{{
                                form_label(registrationForm.prenom, null,
                                {
                                    'label': 'Prenom',
                                    'label_attr': {'class': 'form-label'}
                                })
                            }}
							{{
                                form_widget(registrationForm.prenom,
                                {
                                    'attr': {'class': 'form-control'}
                                })
                            }}
						</div>
						<div class="mb-3">
							{{
                                form_label(registrationForm.datenaiss, null,
                                {
                                    'label': 'Date de Naissance',
                                    'label_attr': {'class': 'form-label'}
                                })
                            }}
							{{
                                form_widget(registrationForm.datenaiss,
                                {
                                    'attr': {'class': 'form-control'}
                                })
                            }}
						</div>
						<div class="mb-3">
							{{form_label(registrationForm.roles, null,
							{
								'label': 'Poste'
							}
							)}}
							{{form_widget(registrationForm.roles)}}
						</div>
						<div class="mb-3">
							{{
                                form_label(registrationForm.email, null,
                                {
                                    'label': 'Adresse Email',
                                    'label_attr': {'class': 'form-label'}
                                })
                            }}
							{{
                                form_widget(registrationForm.email,
                                {
                                    'attr': {'class': 'form-control'}
                                })
                            }}

							{{form_errors(registrationForm.email)}}

						</div>
						<div class="mb-3">
							{{
                                form_label(registrationForm.telephone, null,
                                {
                                    'label': 'Numero de telephone',
                                    'label_attr': {'class': 'form-label'}
                                })
                            }}
							{{
                                form_widget(registrationForm.telephone,
                                {
                                    'attr': {'class': 'form-control'}
                                })
                            }}
						</div>

						<div class="mb-3">
							{{
                                form_label(registrationForm.plainPassword, null,
                                {
                                    'label': 'Mots de passe',
                                    'label_attr': {'class': 'form-label'}
                                })
                            }}
							{{
                                form_widget(registrationForm.plainPassword,
                                {
                                    'attr': {'class': 'form-control'}
                                })
                            }}
							{{form_errors(registrationForm.plainPassword)}}

						</div>

						<div class="mb-3">
							{{
                                form_label(registrationForm.agreeTerms, null,
                                {
                                    'label': 'J\' acepte les conditions d\' utilisation',
                                    'label_attr': {'class': 'form-check-label'}
                                })
                            }}
							{{
                                form_widget(registrationForm.agreeTerms,
                                {
                                    'attr': {'class': 'form-check-input'}
                                })
                            }}
						</div>
						<div class="d-grid">
							<button type="submit" class="btn btn-primary">Enregistrer</button>
						</div>


						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
